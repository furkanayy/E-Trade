@model Grup22.Models.Product

@{
    ViewData["Title"] = "Ürün Silme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productStock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productStock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productImageUrl)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.productImageUrl)"/>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="productId" />
        <input type="submit" value="Ürünü Sil" class="btn btn-danger btn-lg" />
    </form>
</div>
